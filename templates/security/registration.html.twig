    {{ encore_entry_link_tags('app') }}
{% endblock %}



{% block body %}
<div class="authentication registration">
    <div class="authentication-container my-5">
        <div class="content">
            <div class="nav d-flex justify-content-end">
                <div class="btn-group">
                    <button class="btn btn-outline-primary btn-sm custom-btn">
                        <a href="{{ path('security_login') }}">Connexion</a>
                    </button>
                    <button class="btn btn-primary btn-sm">
                        <a href="{{ path('security_registration') }}">Inscription</a>
                    </button>
                </div>
            </div>

            <h1 class="text-center mt-4">Inscription</h1>

            <div class="form-container d-flex justify-content-center">
                {{ form_start(form, {'attr':{'class': 'form mt-5'}})}} 
                {% if app.user %}
                    <div class="mb-3 text-center">
                        Tu es connect√© en tant que {{ app.user.username }}, <a href="{{ path('security_logout') }}">Se deconnecter ?</a>
                    </div>
                {% else %}
                    <div class="mb-5">
                        <p class="text-center">Tu as d√©j√† un compte ?<a href="{{ path('security_login') }}"> Connecte toi ici üòâ</a></p>
                    </div>
                {% endif %}  
                <fieldset class="border p-2 mb-2">
                    <legend class="w-auto">Information Personnel</legend> 
                    <div class="row pl-4 pr-4">
                        <div class="col">
                            {{ form_row(form.firstName, { 'label':'Pr√©nom' ,'attr':{'placeholder':"Pr√©nom"}})}}
                        </div>
                        <div class="col">
                            {{ form_row(form.lastName, {'label':'Nom' ,'attr':{'placeholder':"Nom"}})}}
                        </div>
                        <div class="col">
                            {{ form_row(form.birthDate, {'label':'Date de naissance' ,'attr': {'class':'js-datepicker', 'autocomplete':'off', 'placeholder': '23-09-2000'}})}}
                        </div>
                    </div>
                    <div class="row pl-4 pr-4">
                        <div class="col">
                            {{ form_row(form.address, {'label':'Adresse' ,'attr':{'placeholder':"Adresse"}})}}
                        </div>
                        <div class="col">
                            {{ form_row(form.city, {'label':'Ville' ,'attr':{'placeholder':"Ville"}})}}
                        </div>
                    </div>
                </fieldset>
                <fieldset class="border p-2 mb-2">
                    <legend class="w-auto">Information du compte</legend>
                    <div class="row pl-4 pr-4">
                        <div class="col">
                            {{ form_row(form.email, {'label':'Adresse Email' ,'attr':{'placeholder':"email@exemple.com"}})}}
                        </div>
                    </div>
                    <div class="row pl-4 pr-4">
                        <div class="col">
                            {{ form_row(form.password, {'label':'Mot de Passe' ,'attr':{'placeholder':"Mot de passe"}})}}
                        </div>
                        <div class="col">
                            {{ form_row(form.confirm_password, {'label':'Confirmation du mot de passe' ,'attr':{'placeholder':"Confirmation du mot de passe"}})}}
                        </div>
                    </div>
                </fieldset>
                <fieldset class="border p-2 mb-2">
                    <legend class="w-auto">Information P√©dagogique</legend>
                    <div class="row pl-4 pr-4">
                        <div class="col">
                            {{ form_row(form.groupName, {'label':'Classe'})}}
                        </div>
                        <div class="col">
                            {{ form_row(form.alternanceJob, {'label':'Job d\'alternance' ,'attr':{'placeholder':"Job d'alternance"}})}}
                        </div>
                    </div>
                </fieldset>
                    {{ form_row(form.image, {'label':'Photo de Profil' ,'attr':{'placeholder':"Url de l'image"}})}}

                <button type="submit" class="btn btn-primary mt-2 w-100">S'inscrire</button>
                {{ form_end(form)}}
            </div>

        </div>
    </div>
</div>

