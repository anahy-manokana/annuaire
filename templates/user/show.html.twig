{% extends 'base.html.twig' %}

{% block body %}
    <div class="" id="test">
        <div class="profile-header-content d-flex flex-row align-items-center">
            <div class="profile-header-img p-2">
                {% if user.image %}
                <img style="width: 200px; height: 200px; object-fit: cover;" class="card-img-top rounded-circle" src="{{ user.image}}" alt="Card image cap">
                {% else %}
                <img style="width: 200px; height: 200px; object-fit: cover;" class="card-img-top rounded-circle" src="https://img.myloview.fr/stickers/humain-homme-personne-avatar-profil-utilisateur-vector-icon-illustration-700-80657983.jpg" alt="Card image cap">
                {% endif %}
            </div>
        <div class="profile-header-info align-self-center p-4">
            <h2> {{ user.firstName }} {{ user.lastName }}<h2>
            <h4 class="text-">{{ user.groupName.name }} - {{ user.groupName.promo }}</h3>
        </div>
    </div>
    </div>
    <div class="flexion row justify-content-center p-1">
     <div class="user col user-info">
            <aricle class="card p-3 my-2" style="width: 435px">
            <h3>Info</h3>
                <ul>
                    <li> Pr√©nom : {{ user.firstName }}</li>
                    <li> Nom : {{ user.lastName }}</li>
                    <li> email : {{ user.email }}</li>
                    <li> Groupe : {{ user.groupName.name }}</li>
                    <li> Promo : {{ user.groupName.promo }}</li>
                    <li> Job en alternance : {{ user.alternanceJob }}</li>
                    <li> Date de naissance : {{ user.birthDate  | date('d/m/Y') }}</li>
                </ul>
            </article>
        </div>
        <div class="user-post col justify-content-center">
            <section class="posts ">
                {% for post in user.posts %}
                    {{ include('post/_post.html.twig') }}
                {% endfor %}
            </section>
        </div>
         <div class="user col user-galerie">
            <article class="card p-3 my-2 " style="width: 435px">
            <h3>Galerie</h3>
                <div class="d-flex flex-wrap justify-content-around">
                    {% for post in user.posts %}
                        {% for photo in post.photos %}
                            <img style="width: 150px; height: 150px; object-fit: cover;" class="img-responsive my-2"  src="{{ asset('uploads/' ~ photo.name) }}" alt="post photo">
                        {% endfor %}
                {% endfor %}
                </div>
            </article>
        </div>
    </div>
</div>
{% endblock %}