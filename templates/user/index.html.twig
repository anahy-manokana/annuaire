{% extends 'base.html.twig' %}

{% block body %}
    <section class="users">
        <h1 class="text-center">Utilisateurs</h1>
        <div class="search-container p-5">
            {{ form_start(form) }}
            <div class="input-group ">
                <div>
                    {{ form_row(form.qFirstName) }}
                </div>
                <div>
                    {{ form_row(form.qLastName) }}
                </div>
                <div>
                    {{ form_row(form.qGroupName)}}
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                <div>
                    {{ form_row(form.clear, {'attr': {'class': 'reset btn btn-danger'}}) }}
                </div>
            </div>
            {{ form_end(form) }} 
        </div>
        <div class="users card-container d-flex flex-row flex-wrap justify-content-center">
            {% for user in users %}
                <div class="card m-2" style="width: 250px;">
                    <img style="width: 200px; height: 200px; object-fit: cover;" class="card-img-top rounded-circle" src="{{ user.userProfile ? asset('/uploads/' ~  user.userProfile.name)  : "https://img.myloview.fr/stickers/humain-homme-personne-avatar-profil-utilisateur-vector-icon-illustration-700-80657983.jpg" }}" alt="profil picture">

                    <div class="card-body d-flex flex-column align-items-center">
                        <h5 class="card-title text-center">{{ user.firstName }} {{user.lastname}}</h5>
                        <p class="card-text text-center text-muted">{{ user.groupName.name}}-{{ user.groupName.promo }}</p>
                        <a href="{{ path('user_show',{id:user.id}) }}" class="btn btn-primary">Voir le profil</a>
                    </div>
                </div>
            {% endfor %}
        </div>
          <div class="pagination">
             {{ knp_pagination_render(users) }}
          </div>
    </section>
{% endblock %}